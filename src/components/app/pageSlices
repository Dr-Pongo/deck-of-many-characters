import { createSlice } from "@reduxjs/toolkit";


// Current Page Slice
/*  == Page Slice ==
 *  Trying to be clever with named actions instead of
 *   the need to comment on each dispatch payload number means
 */
const initialPageState = 0;
export const pageSlice = createSlice({
  name: 'page',
  initialState: initialPageState,
  reducers: {
    goHomePage: (state, action) => {
        state = 0;
    },
    goCreatePage: (state, action) => {
        state = 1;
    },
    goEditPage: (state, action) => {
        state = 2;
    },
    goPlayPage: (state, action) => {
        state = 3;
    },
  },
});

export const selectPage = (state) => state.page.currentPage;

// Currently selected character slice
const initialCurrentCharacter = {};
export const currentCharacterSlice = createSlice({
    name: 'currentChar',
    initialState: initialCurrentCharacter,
    reducers: {
       setCurrentCharacter: (state, action) => {
            state = action.payload;
       }, 
    }
});

// all characters!
const initialAllCharacters = [];